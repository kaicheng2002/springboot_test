<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuyan.springboot_test.dao.BlogMapper">

    <insert id="addBlog" parameterType="com.yuyan.springboot_test.pojo.Blog">
        insert into blog
        values (#{id}, #{title}, #{author}, #{createTime}, #{views})
    </insert>
    <select id="findBlog" resultType="com.yuyan.springboot_test.pojo.Blog" resultMap="blogRes" parameterType="map">
        select * from blog where
        <if test="title!=null">
            title=#{title} and
        </if>
        <if test="author!=null">
            author=#{author}
        </if>
    </select>
    <select id="findBlogbyId" resultType="integer" parameterType="map">
        update blog
        <set>
            <if test="title!=null">
                title=#{title},
            </if>
            <if test="author!=null">
                author=#{author}
            </if>
        </set>
        where id=#{id}
    </select>

    <resultMap id="blogRes" type="com.yuyan.springboot_test.pojo.Blog">
        <result property="createTime" column="create_time"/>
    </resultMap>
</mapper>